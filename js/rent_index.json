{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/cxong1/3179-homework-week9/main/Data/cost%20of%20living%202020.csv"},
    "description": "Slope graph showing rent index",
    "mark": "line",
    "width": {"step": 50},
    "encoding": {
      "x": {
        "field": "Country",
        "type": "ordinal",
        "scale": {"padding": 0.5}
      },
      "y": {
        "aggregate": "median",
        "field": "Rent Index",
        "type": "quantitative"
      },
      "color": {"field": "site", "type": "nominal"},
      "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Rent Index", "type": "quantitative"}
        ]
    },
    "params":[
      {"name": "country",
        "bind": {
        "input": "select",
        "options": [
        [100.0479, 2.6179],
        [100.0479, 2.6179],
        [15.526, 35.2551],
        [8.7832, 0.5085],
        [-70.5260, 35.2551],
        [-70.7832, 0.4915]
        ],
        "labels": ["Asia", "Australia" ,"Europe", "Africa", "North America","South America"],
        "name": "Select country to compare: "
        }
      }]
    
  }
  